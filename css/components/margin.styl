// Margin Base
mx = 10px
ms = mx + 5px
mm = ms + 5px
ml = mm + 5px
mxl = ml + 5px

// Margin Small
.e-m-xs
    margin  mx
.e-mt-xs
    margin-top  mx
.e-mr-xs
    margin-right  mx
.e-mb-xs
    margin-bottom  mx
.e-ml-xs
    margin-left  mx

